<html>
    <head>
        <title>
            <%=title%>
        </title>
        <link type="text/css" rel="stylesheet" href="/css/home.css">
        <script src="https://kit.fontawesome.com/940b727002.js" crossorigin="anonymous"></script>

    </head>
    <body>
        <h1 id="page-heading">
            <i class="fas fa-address-book"></i>
            Contact List 
        </h1>
        <div id="box" >
            <div id="small">
                <%for(let i of contactList){%>
                    <div id="list">
                        <p><%= i.name%></p>
                        <p><%= i.phone%></p>
                        <p><a href="/delete-contact/?id=<%=i._id%>"><i class="fas fa-window-close " ></i></a></p>
                    </div>
                    
                <%}%>
                </div>
        </div>
        <form action="/contact" method="POST">
            <input type="text" name="name" placeholder="Enter name" required>
            <input type="number" name="phone" placeholder="Enter phone no." required>
            <button type="submit">Add Contact</button>
        </form>
      <script type="text/javascript" src="/js/home.js"></script>
    </body>
</html>